<% layout('./layouts/boilerplate') -%>
<body id ="forgotpassword-body">
<div class="container d-flex justify-content-center align-items-center" id ="forgotpassword-container">
    <div class="card shadow">
        <div class="card-body">
            <div class="">
                <h2 class="card-title text-dark">Recover your account</h2>
                <h6 class="card-text text-muted">Please enter your email to search for your account.</h6>
                <h1 class="border bottom mb-4"></h1>
            </div>
            <div>
                <form action="/forgotpassword" method="POST">
                    <div class="mb-3"> 
                        <input class = 'form-control' type = 'email' id = 'email' name = 'email' placeholder = 'Email' required> 
                    </div>
                    <button class="btn btn-primary col-12 mt-1">Search</button>
                </form> 
                <% if (success && success.length) {%>
                    <span class="d-flex justify-content-center mt-3" id ="forgotpassword-success-style"><%= success %></span>
                <%}%> 
            </div>
        </div>
    </div>
</div>
</body>
